<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    tools:context=".MainActivity">



    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/teamname"
            android:layout_marginTop="@dimen/_30sdp"
            android:textColor="@color/colorone"
            android:textStyle="bold"
            android:textSize="40sp"
            android:gravity="center"
            android:text="TEAM A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/score"
            android:layout_marginTop="@dimen/_20sdp"
           android:layout_below="@+id/teamname"
            android:textColor="@color/colorthree"
            android:textStyle="bold"
            android:textSize="80sp"
            android:gravity="center"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

         <Button
             android:id="@+id/btn1"
             android:layout_marginRight="@dimen/_10sdp"
             android:layout_marginLeft="@dimen/_10sdp"
             android:layout_marginTop="@dimen/_60sdp"
             android:layout_below="@+id/score"
             android:textStyle="bold"
             android:textSize="30sp"
             android:text="+6"
             android:textColor="#FFF"
             android:background="@color/colorButtonNormal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn2"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_below="@+id/btn1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="+4"
            android:textColor="#FFF"
            android:background="@color/colorButtonNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn3"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_below="@+id/btn2"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="+2"
            android:textColor="#FFF"
            android:background="@color/colorButtonNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_below="@id/btn3"
            android:id="@+id/Aresult"
            android:textSize="@dimen/_30sdp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Bteamname"
            android:layout_marginTop="@dimen/_30sdp"
            android:textColor="@color/colorone"
            android:textStyle="bold"
            android:textSize="40sp"
            android:gravity="center"
            android:text="TEAM B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/Bscore"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/Bteamname"
            android:textColor="@color/colorthree"
            android:textStyle="bold"
            android:textSize="80sp"
            android:gravity="center"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/Bbtn1"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_below="@+id/Bscore"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="+6"
            android:textColor="#FFF"
            android:background="@color/colorButtonNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/Bbtn2"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_below="@+id/Bbtn1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="+4"
            android:textColor="#FFF"
            android:background="@color/colorButtonNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/Bbtn3"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_below="@+id/Bbtn2"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="+2"
            android:textColor="#FFF"
            android:background="@color/colorButtonNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_below="@id/Bbtn3"
            android:id="@+id/Bresult"
            android:textSize="@dimen/_30sdp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</LinearLayout>